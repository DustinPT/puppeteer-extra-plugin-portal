{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist", /* Redirect output structure to the directory. */
    "removeComments": true,
    "declaration": false,
  },
  "include": [
    "**/*.ts",
    "*.config.js",
    ".*rc.js",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}